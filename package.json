{
	"name": "ragemp-ui-3d-label",
	"version": "1.0.0",
	"author": "ghosty2004",
	"type": "module",
	"scripts": {
		"build-client": "tsc --project ./src/client/tsconfig.json",
		"build-server": "tsc --project ./src/server/tsconfig.json",
		"build-html": "parcel build --dist-dir dist/html --no-source-maps --public-url 'https://ghosty2004.github.io/ragemp-ui-3d-label/' src/html/index.html",
		"build": "rimraf dist && npm run build-client && npm run build-server && npm run build-html"
	},
	"devDependencies": {
		"@ragempcommunity/types-cef": "^2.1.6",
		"@ragempcommunity/types-client": "^2.1.6",
		"@ragempcommunity/types-server": "^2.1.6",
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/node": "^20.11.30",
		"@types/react": "^18.2.73",
		"@types/react-dom": "^18.2.23",
		"nodemon": "^3.1.0",
		"parcel": "^2.12.0",
		"rimraf": "^5.0.5",
		"rollup": "^4.13.0",
		"typescript": "^5.4.3"
	},
	"prettier": {
		"tabWidth": 4,
		"printWidth": 200,
		"singleQuote": true,
		"useTabs": true
	}
}
